<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console"/>
		</Root>
		<Logger name="com.github.pierrebeucher.cctalk4j.device.bill.validator.BillValidator" level="debug"/>
		<Logger name="com.github.pierrebeucher.cctalk4j.handler.AbstractDeviceHandler" level="debug"/>
		<Logger name="com.github.pierrebeucher.cctalk4j.handler.BillValidatorDeviceHandler" level="debug"/>
	</Loggers>
</Configuration>